<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Regular">

    <EditText
        android:id="@+id/sueldo"
        android:layout_width="316dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:hint="Salario Contrato"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVolver" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="344dp"
        android:onClick="calculateContractPayment"
        android:text="Calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sueldo"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/sueldo" />

    <TextView
        android:id="@+id/Salario"
        android:layout_width="242dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCalcular"
        app:layout_constraintEnd_toEndOf="@+id/btnCalcular"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/btnCalcular"
        app:layout_constraintTop_toBottomOf="@+id/sueldo"
        app:layout_constraintVertical_bias="0.72" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="116dp"
        android:layout_height="56dp"
        android:layout_marginTop="72dp"
        android:onClick="goBack"
        android:text="Volver"
        app:layout_constraintEnd_toEndOf="@+id/sueldo"
        app:layout_constraintStart_toStartOf="@+id/sueldo"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>